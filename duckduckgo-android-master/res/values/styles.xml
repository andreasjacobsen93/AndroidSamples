<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="MainFeedText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ListItemText" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/left_text_selector</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <style name="AutocompleteResultText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#54595f</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AutocompleteDetailText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#7c8594</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="PullToRefreshMainText" parent="@android:style/TextAppearance.Medium">
        <item name="android:singleLine">true</item>
<!--         <item name="android:textAppearance">?android:attr/textAppearanceMedium</item> -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="PullToRefreshSubText" parent="@android:style/TextAppearance.Small">
        <item name="android:singleLine">true</item>
<!--         <item name="android:textAppearance">?android:attr/textAppearanceSmall</item> -->
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="LeftLayoutRoot">
        <item name="android:background">?attr/leftLayoutRootBackground</item>
    </style>
    
    <style name="LeftDiv">
        <item name="android:src">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    
    <style name="LeftDivTop" parent="LeftDiv">
        <item name="android:background">?attr/leftDivTopBackground</item>
    </style>
    
    <style name="LeftDivBottom" parent="LeftDiv">
        <item name="android:background">?attr/leftDivBottomBackground</item>
    </style>
    
    <style name="LeftItemRoot">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">53dp</item>
    </style>
    
    <style name="LeftItemText" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">?attr/leftItemTextColor</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        
        <item name="android:drawableRight">@drawable/icon_caret_selector</item>        
        <item name="android:clickable">true</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        
        <item name="android:background">?attr/leftItemTextBackground</item>
    </style>
    
    <style name="LeftTitleText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">?attr/leftTitleTextSize</item>
        <item name="android:textColor">?attr/leftTitleTextColor</item>
        <item name="android:background">?attr/leftTitleBackground</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
    
    <style name="LeftRecentListView">
        <item name="android:listSelector">?attr/leftRecentListSelector</item>
        <item name="android:background">?attr/leftRecentListViewBackground</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>
    
    <style name="SavedResultListView">
        <item name="android:listSelector">?attr/leftRecentListSelector</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>
    
    <style name="RecentListRoot">
        <item name="android:background">?attr/leftRecentListRootBackground</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_width">match_parent</item> 
    </style>
    
    <style name="RecentListItemRoot">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">?attr/leftItemTextBackground</item>
    </style>
    
    <style name="RecentItemText" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">?attr/leftRecentItemTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">?attr/leftRecentListSelector</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="RecentNotRecordingItemRoot">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">?attr/leftItemTextBackground</item>
    </style>
    
    <style name="RecentNotRecordingItemText">
        <item name="android:textColor">?attr/leftRecentItemTextColor</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    
</resources>